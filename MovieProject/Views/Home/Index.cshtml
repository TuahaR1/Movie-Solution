@model List<MovieProject.Models.Movie>
@{
    ViewBag.title = "My Movie List";
}

<div class="mb-2">
    <a asp-controller="Movie" asp-action="Add" class="btn btn-outline-primary">Add Movie</a>

</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
                <td>
                    <a asp-controller="Movie" asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@movie.MovieId">Edit</a> 
                    <a asp-controller="Movie" asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@movie.MovieId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
